@using System.Data;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>项目管理</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/UI/bootstrap-paginator.min.js"></script>
    <script src="~/Content/page/front-endPage.js"></script>
    <script src="~/nfine/cololr/js.js"></script>
    <link href="~/nfine/cololr/css.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Image/牛工厂 logo.gif" type="image/x-icon" />
    <link rel="shortcut icon" href="~/Content/Image/牛工厂 logo.gif" type="image/x-icon" />
    <link href="~/Content/tableh.css" rel="stylesheet" />
    <link href="~/CSS/paging.css" rel="stylesheet" />
    <script src="~/Scripts/paging.js"></script>
    <style type="text/css">
        * {
            margin: 0px;
            padding: 0px;
        }

        .mouseovers {
            border-color: #0094ff;
        }

        .form-control {
            margin-top: 2px;
        }

        .modal-header-backgcolo {
            background-color: #2684e6;
        }

        .timetext, .seletext, #Select22, #Select33, #Select88, #Select8, #Select9 {
            border-radius: 3px 4px;
        }

        .seletext, #Select22, #Select33, #Select8, #Select9 {
            line-height: 26px;
            height: 26px;
        }

        #divshow {
            display: none;
        }

        th {
            text-align: center;
            vertical-align: middle;
        }

        .ckstyle {
            width: 20px;
            height: 20px;
        }
    </style>
</head>
<body>
    <p>
        <label>规格：</label>
        <input id="SizeName" style="margin-right:20px;width:150px;display:inline;" class="form-control" />
        <button type="button" id="SelectDataDiffs" class="btn btn-info Buttons" onclick="all2()">
            <img src="~/Content/Icon/select.png" />
            查询
        </button>
        <a class="btn btn-info Buttons" id="Producetianjia" data-toggle="modal" data-target="#Add_Modal_Size">
            <img class="buttonicon" src="~/Content/Icon/添加图标.png">
            添加规格
        </a>
        <a class="btn btn-danger Buttons" onclick="AllDelete()" data-toggle="modal" data-target="#ProjectAllDelete">
            <img class="buttonicon" src="~/Content/Icon/删除图标.png">
            批量删除
        </a>
    </p>
    <div id="dsidiv">
        @if (ViewBag.AllSizeInfo == null)
        {
            <table class="table table-bordered table-hover table1">
                <tr style="font-size:18px;vertical-align:middle">
                    <th width="200px;"><input type="checkbox" style="width:20px;height:20px;margin-left: 75px;" id="Checkbox3" onchange="GetAll()" /><span style="display:block;float:right;margin-right:38px;">全选</span></th>
                    <th>编号</th>
                    <th>规格名称</th>
                    <th>操作</th>
                </tr>
            </table>
        }
        else
        {
            DataTable size = ViewBag.AllSizeInfo;
            <table class="table table-bordered text-center table-hover table1 table-striped" style="width:100%; table-layout:fixed;margin-top: 10px">
                <tr style="font-size:18px;vertical-align:middle">
                    <th width="200px;"><input type="checkbox" style="width:20px;height:20px;margin-left: 75px;" id="Checkbox3" onchange="GetAll()" /><span style="display:block;float:right;margin-right:38px;">全选</span></th>
                    <th>编号</th>
                    <th>规格名称</th>
                    <th>操作</th>
                </tr>
                @for (int i = 0; i < size.Rows.Count; i++)
                {
                    <tr class="tr1">
                        <td><input type="checkbox" name="cks" class="ckstyle check" value="@size.Rows[i]["ProjectSizeNo"]" /></td>
                        <td>@(i+1)</td>
                        <td>@size.Rows[i]["ProjectSizeName"]</td>       
                        <td>
                            <a onclick="GetUpdSizeInfo(@size.Rows[i]["ProjectSizeNo"])" href="#" data-toggle="modal" data-target="#UpdProjectSize">编辑</a>
                            <a onclick="DelSize(@size.Rows[i]["ProjectSizeNo"])" href="#" data-toggle="modal" data-target="#DelOneProjectSize">删除</a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>

    <span id="count" value="@ViewBag.count" hidden>@ViewBag.count</span>
    <div id="pageTool"></div>
    <div class="modal fade" id="myModal">
        @*<div class="modal-dialog modal-sm">

                <img alt="" src="data:image/gif;base64," />

            </div>*@<!-- /.modal-dialog -->

        <div style="width: 200px;height:20px; z-index: 20000; position: absolute; text-align: center; left: 50%; top: 50%;margin-left:-100px;margin-top:-10px">
            <div class="progress progress-striped active" style="margin-bottom: 0;">
                <div class="progress-bar" style="width: 100%;"></div>
            </div>
            <h5 style="color:black"> <strong>数据加载中，请稍后…！</strong> </h5>
        </div>
    </div><!-- /.modal -->
    <!--添加规格-->
    <div class="modal fade" id="Add_Modal_Size" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-backgcolo">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">添加产品操作</h4>
                </div>
                <div class="modal-body">
                    <table style="margin:0px auto;" id="addTable">
                        <tr>
                            <td>规格名称：</td>
                            <td>
                                <input id="add_SizeName" class="form-control" type="text" />
                            </td>
                        </tr>
                    </table>

                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">
                        <img class="buttonicon" style="padding-bottom:4px;" src="~/Content/Icon/cancel.png" />
                        取消
                    </a>
                    <a class="btn btn-primary" id="btn_add_Size">
                        <img class="buttonicon" src="~/Content/Icon/save.png" />
                        添加
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!--删除规格-->
    <div class="modal fade" id="DelOneProjectSize" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-backgcolo">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">删除规格</h4>
                </div>
                <div class="modal-body">
                    是否删除？
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <img class="buttonicon" src="~/Content/Icon/cancel.png">
                        取消
                    </button>
                    <button type="button" class="Del_Sure btn btn-info">
                        <img class="buttonicon" src="~/Content/Icon/删除图标.png">
                        删除
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--批量删除-->
    <div class="modal fade" id="ProjectSizeAllDelete" tabindex="-1" data-show="false" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-backgcolo">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">删除操作</h4>
                </div>
                <div class="modal-body">
                    是否删除？
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <img class="buttonicon" src="~/Content/Icon/cancel.png">
                        取消
                    </button>
                    <button type="button" class="btn btn-info chanpiliang Buttons">
                        <img class="buttonicon" src="~/Content/Icon/删除图标.png">
                        删除
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--编辑-->
    <div class="modal fade" id="UpdProjectSize" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-backgcolo">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">编辑产品</h4>
                </div>
                <div class="modal-body">
                    <table style="margin:0px auto;">
                        <tr hidden="hidden">
                            <td>Id：</td>
                            <td>
                                <input id="edit_ProjectSizeNo" class="form-control" type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>规格名称：</td>
                            <td>
                                <input id="edit_ProjectSizeName" class="form-control" type="text" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <img class="buttonicon" src="~/Content/Icon/cancel.png">
                        取消
                    </button>
                    <button type="button" class="btn btn-info" id="Edit_ProjectSize">
                        <img class="buttonicon" src="~/Content/Icon/save.png">
                        保存
                    </button>
                </div>
            </div>
        </div>
    </div>


    <script>
        var page = new Paging();
        page.init({
            target: $('#pageTool'), pagesize: 10, count: $('#count').text(), pageSizeList: [5,10, 20], toolbar: true, current: 1, callback: function (pagecount, size, count) {
                console.log(arguments)
                //alert('当前第 ' + pagecount + '页,每页 ' + size + '条,总页数：' + count + '页');
                ////动态设置总条数 https://github.com/tianxiangbing/paging
                //page.render({ count: 89, current: pagecount });
                //alert($(".ui-select-pagesize").val())
                var SizeName = $("#SizeName").val();
                $.ajax({
                    type: "GET",
                    url: "/Size/SelectAll",
                    data: { SizeName:SizeName, pagecount: pagecount, size: size },
                    beforeSend: function () {
                        showModal();
                    },
                    success: function (data) {
                        //alert(data);
                        $("#dsidiv").html(data);
                        hideModal();
                    }
                });
            },
            go: function (p) {
            },
            changePagesize: function (pagesize, currenpage, pagecount) {
                alert(pagesize);
                alert("changePagesize");
            }
        });

        $(function(){
            all2();
        })
            function all2() {
                var SizeName = $("#SizeName").val();
                $.ajax({
                    type: "GET",
                    url: "/Size/SelectAll",
                    data: { SizeName:SizeName, pagecount: 1, size: 10 },
                    beforeSend: function () {
                        showModal();
                    },
                    success: function (data) {
                        //alert(data);
                        $("#dsidiv").html(data);
                        hideModal();
                    }
                });
            }

            function hideModal() {
                $('#myModal').modal('hide');
            }

            function showModal() {
                $('#myModal').modal({ backdrop: 'static', keyboard: false });
            }


            //添加规格
            $("#btn_add_Size").click(function () {
                //alert("添加");
                var SizeName = $("#add_SizeName").val();
                if (SizeName == "" || SizeName == null) {
                    alert("请填写规格名称");
                    return false;
                }
                $.ajax({
                    type: "GET",
                    url: "/Size/AddSize",
                    data: { SizeName: SizeName},
                    success: function (data) {
                        if (data=="isin") {
                            alert("此规格已存在");
                        }else {
                            $("#Add_Modal_Size").modal("hide");
                            document.location.reload();
                        }
                    }, error: function (data) {
                        alert(data);
                    }
                })
            })

            //删除规格
            function DelSize(ProjectSizeNo) {
                if (ProjectSizeNo == null || ProjectSizeNo == "") {
                    alert("请选择规格");
                }
                var cheValue = ProjectSizeNo + ",";
                $(".Del_Sure").click(function () {
                    $.post("/Size/DelSize", { ProjectSizeNo: cheValue }, function (data) {
                        if (data == "ok") {
                            $("#DelOneProjectSize").modal("hide");
                            document.location.reload();
                        }
                        else {
                            alert("删除失败！");
                        }
                    });
                });
            }

            //全选
            function GetAll() {
                var che = document.getElementById("Checkbox3");
                var ischeck = che.checked;
                if (che.checked == ischeck) {
                    var a = document.getElementsByName("cks");
                    for (var i = 0; i < a.length; i++) {
                        a[i].checked = ischeck;
                    }
                }
            }

            //多选删除
            function AllDelete() {
                var b = document.getElementsByName("cks");
                //console.log(b);
                var r = 0;
                var cheValue = "";
                for (var i = 0; i < b.length; i++) {
                    //alert("状态：" + b[i].checked);
                    if (b[i].checked == true) {
                        cheValue += b[i].value + ",";
                        //alert(b[i].value);
                    }
                    else {
                        r++;
                    }
                }
                if (r == b.length) {
                    alert("请先选中要删除的数据");
                    $("#ProjectSizeAllDelete").modal("hide");
                } else {
                    $("#ProjectSizeAllDelete").modal("show");
                    $(".chanpiliang").click(function () {
                        $.post("/Size/DelSize", { ProjectSizeNo: cheValue }, function (data) {
                            if (data == "ok") {
                                $("#ProjectSizeAllDelete").modal("hide");
                                document.location.reload();
                            }
                            else {
                                alert("批量删除失败！");
                            }
                        });
                    });

                }
            }

            //获取需要需要编辑的信息
            function GetUpdSizeInfo(ProjectSizeNo) {           
                if (ProjectSizeNo == null || ProjectSizeNo == "") {
                    alert("请选择规格");
                }
                $.post("/Size/GetUpdSizeInfo", { PSNo: ProjectSizeNo }, function (data) {
                    //debugger;
                    var info = data.split(",");
                    $("#edit_ProjectSizeNo").val(info[0]);
                    $("#edit_ProjectSizeName").val(info[1]);
                })
            }

            //编辑
            $("#Edit_ProjectSize").click(function () {
                var ProjectSizeNo = $("#edit_ProjectSizeNo").val();
                var ProjectSizeName = $("#edit_ProjectSizeName").val();
                $.post("/Size/EditProjectSize", {ProjectSizeNo:ProjectSizeNo, ProjectSizeName: ProjectSizeName}, function (data) {
                    if (data == "ok") {
                        $("#UpdProjectSize").modal("hide");
                        document.location.reload();
                    }
                    else if (data == "no") {
                        alert("编辑失败");
                    } else {
                        alert(data);
                    }
                })
            })
    </script>
</body>
</html>
