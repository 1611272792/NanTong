            }
            $.post("/UsergroupManager/SelectEditData",{gid:gid},function(data){
                var info=data.split('/');
                $("#UserGroupsId_edit").val(info[0]);
                $("#UserGroupsName_edit").val(info[1]);                
                $("#edit_AuthorId").tree({
                    url: "/UsergroupManager/GetClientsDataJson2?usergrid="+gid,
                    checkbox: true,

                })
            })            
